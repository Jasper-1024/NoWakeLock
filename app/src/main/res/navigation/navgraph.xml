<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/appDaFragment">

    <fragment
        android:id="@+id/appDaFragment"
        android:name="com.js.nowakelock.ui.appDa.AppDaFragment"
        android:label="@string/Apps">
        <action
            android:id="@+id/action_appDaFragment_to_appFragment"
            app:destination="@id/appFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/appFragment"
        android:name="com.js.nowakelock.ui.app.AppFragment"
        android:label="{label}"
        tools:layout="@layout/fragment_app">
        <argument
            android:name="packageName"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="label"
            android:defaultValue='""'
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/wakeLockFragment"
        android:name="com.js.nowakelock.ui.fragment.WakeLockFragment"
        android:label="@string/WakeLock"
        tools:layout="@layout/fragment_das" />
    <fragment
        android:id="@+id/alarmFragment"
        android:name="com.js.nowakelock.ui.fragment.AlarmFragment"
        android:label="@string/Alarm"
        tools:layout="@layout/fragment_das" />
    <fragment
        android:id="@+id/serviceFragment"
        android:name="com.js.nowakelock.ui.fragment.ServiceFragment"
        android:label="@string/Service"
        tools:layout="@layout/fragment_das" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.js.nowakelock.ui.settings.SettingsFragment"
        android:label="@string/settings" />

    <fragment
        android:id="@+id/daFragment"
        android:name="com.js.nowakelock.ui.dafragment.DaFragment"
        android:label="{name}">
        <argument
            android:name="name"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="packageName"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="type"
            android:defaultValue='""'
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_daFragment"
        app:destination="@id/daFragment" />


</navigation>